@using BookStore.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
    <title>@ViewData["Title"] - BookStore</title>
    <style>
        .form-register {
            margin: auto;
            padding: 20px !important;
        }
    </style>
</head>
<body>
    <form class="needs-validation mt-5 col-4 form-register shadow bg-white p-2" autocomplete="off" asp-controller="Account" asp-action="Login" method="post">
        <h2 class="text-center mb-4">Login</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input class="form-control mb-3" asp-for="Email" placeholder="Email or username">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input class="form-control mb-3" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark btn-block">Login</button>
        <div class="form-group">
            <input asp-for="RememberMe"/>
            <label asp-for="RememberMe"></label>
        </div>
        <div class="log-home d-flex justify-content-between">
            <a asp-action="Register" class="align-self-end">Register</a>
            <a href="/" class="align-self-end">Home Page</a>
        </div>
    </form>
</body>
</html>
